import express from "express";
import fs from "fs";
import { v4 as uuidv4 } from "uuid";
import path from "path";
import { fileURLToPath } from "url";

const router = express.Router();
const __filename = fileURLToPath(import.meta.url);
const __dirname = path.dirname(__filename);
const weddingsFile = path.join(__dirname, "../data/weddings.json");

router.get("/", (req, res) => {
  fs.readFile(weddingsFile, "utf-8", (err, data) => {
    if (err) return res.status(500).json({ error: "Ошибка чтения" });
    res.json(JSON.parse(data));
  });
});

router.post("/", (req, res) => {
  const newWedding = { id: uuidv4(), ...req.body };
  fs.readFile(weddingsFile, "utf-8", (err, data) => {
    const weddings = err ? [] : JSON.parse(data);
    weddings.push(newWedding);
    fs.writeFile(weddingsFile, JSON.stringify(weddings, null, 2), (err) => {
      if (err) return res.status(500).json({ error: "Ошибка записи" });
      res.status(201).json(newWedding);
    });
  });
});

export default router;
